@model MCard40.Model.Entity.CardPage
@using MCard40.Model.Enums

@{
    ViewData["Title"] = "Создать карту";
}

<link href='https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
<link href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.2.0/css/datepicker.min.css' rel='stylesheet' type='text/css'>
<link href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/1.8/css/bootstrap-switch.css' rel='stylesheet' type='text/css'>
<link href='https://davidstutz.github.io/bootstrap-multiselect/css/bootstrap-multiselect.css' rel='stylesheet' type='text/css'>
<script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js' type='text/javascript'></script>
<script src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js' type='text/javascript'></script>
<script src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.2.0/js/bootstrap-datepicker.min.js' type='text/javascript'></script>
<script src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/1.8/js/bootstrap-switch.min.js' type='text/javascript'></script>
<script src='https://davidstutz.github.io/bootstrap-multiselect/js/bootstrap-multiselect.js' type='text/javascript'></script>

<style>
    .indent-small {
        margin-left: 5px;
    }

    .form-group.internal {
        margin-bottom: 0;
    }

    .dialog-panel {
        margin: 10px;
    }


    .control-label {
        text-align: left !important;
    }

    .datepicker-dropdown {
        z-index: 200 !important;
    }

    .btns {
        display: flex;
        gap: 30px;
        justify-content: center;
    }

    .full-width {
        width: 100% !important;
    }

    .btn-lenght {
        width: 200px
    }

    .col-md-offset-2 {
        margin-left: 141px;
    }

    .panel-body {
        background: #e5e5e5; /* Old browsers */
        background: -moz-radial-gradient(center, ellipse cover, #c1ffc1 0%, #ffffff 100%); /* FF3.6+ */
        background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#c1ffc1), color-stop(100%,#ffffff)); /* Chrome,Safari4+ */
        background: -webkit-radial-gradient(center, ellipse cover, #c1ffc1 0%,#ffffff 100%); /* Chrome10+,Safari5.1+ */
        background: -o-radial-gradient(center, ellipse cover, #c1ffc1 0%,#ffffff 100%); /* Opera 12+ */
        background: -ms-radial-gradient(center, ellipse cover, #c1ffc1 0%,#ffffff 100%); /* IE10+ */
        background: radial-gradient(ellipse at center, #c1ffc1 0%,#ffffff 100%); /* W3C */
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#c1ffc1', endColorstr='#ffffff',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */

        font: 600 15px "Open Sans",Arial,sans-serif;
    }
</style>

<div class='container'>
    <div class='panel panel-success dialog-panel'>
        <div class='panel-heading'>
            <h5>Медицинская карта</h5>
        </div>
        <div class='panel-body'>
            <form asp-action="CardCreate" class='form-horizontal' role='form'>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class='form-group'>
                    <label asp-for="Disease" class='control-label col-md-2 col-md-offset-2' for='id_email'></label>
                    <div class='col-md-6'>
                        <div class='full-width'>
                            <input asp-for="Disease" class='form-control full-width' id='id_email' placeholder='Название болезни' type='text'>
                            <span asp-validation-for="Disease" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class='form-group'>
                    <label asp-for="DiseaseInfo" class='control-label col-md-2 col-md-offset-2' for='id_comments'></label>
                    <div class='col-md-6'>
                        <textarea asp-for="DiseaseInfo" class='form-control' id='id_comments' placeholder='Информация о болезни' rows='3'></textarea>
                        <span asp-validation-for="DiseaseInfo" class="text-danger"></span>
                    </div>
                </div>
                <div class='form-group'>
                    <label asp-for="Treatment" class='control-label col-md-2 col-md-offset-2' for='id_comments'></label>
                    <div class='col-md-6'>
                        <textarea asp-for="Treatment" class='form-control' id='id_comments' placeholder='Лечение' rows='3'></textarea>
                        <span asp-validation-for="Treatment" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Assessment" class="control-label  col-md-2 col-md-offset-2"></label>
                    <div class="col-md-6 full-width">
                        <select asp-for="Assessment" class="form-control" asp-items="Html.GetEnumSelectList<Assessment>()" style="height:34px !important;"></select>
                        <span asp-validation-for="Assessment" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" hidden="hidden">
                    <label asp-for="PatientId" class="control-label"></label>
                    <input asp-for="PatientId" class="form-control" value="@ViewBag.PatientId" />
                </div>
                <div class="btns">
                    <div class="form-group">
                        <div class=''>
                            <input type="submit" value="Сохранить" class="btn-lenght btn-lg btn btn-success" />
                        </div>
                    </div>
                    <div class=''>
                        <a asp-action="Index" class="btn-lenght btn-lg btn btn-success">Назад</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
